# ============================================================================
# DropOne — Environment Variables
# Copy to .env and fill in your values
# ============================================================================

# --- App ---
APP_URL=https://dropone.vercel.app
ALLOWED_ORIGINS=https://dropone.vercel.app,http://localhost:3000
COMMISSION_RATE=0.08

# --- Supabase (supabase.com → Settings → API) ---
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJI...   # Use SERVICE ROLE key, not anon key

# --- OpenAI (platform.openai.com → API Keys) ---
OPENAI_API_KEY=sk-proj-...

# --- Stripe (dashboard.stripe.com → Developers → API Keys) ---
STRIPE_SECRET_KEY=sk_live_...          # Use sk_test_ for testing
STRIPE_WEBHOOK_SECRET=whsec_...        # From Stripe webhook settings

# --- PayPal (developer.paypal.com → My Apps → REST API app) ---
PAYPAL_CLIENT_ID=AXxxxxxxxxx...
PAYPAL_CLIENT_SECRET=ELxxxxxxxxx...
PAYPAL_MODE=sandbox                    # Change to 'live' for production

# --- CJ Dropshipping (optional — cj.com → API Settings) ---
CJ_API_EMAIL=your@email.com
CJ_API_KEY=your-cj-api-key

# --- Web Push Notifications (optional) ---
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=BPxxxxxxxxx...
VAPID_PRIVATE_KEY=xxxxx...
VAPID_CONTACT=mailto:your@email.com
